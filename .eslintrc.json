{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "global-require": "off",
        "import/prefer-default-export": "off",
        "no-console": "off",
        "max-len": [
            "error",
            {
                "ignoreComments": true
            }
        ],
        "no-unused-expressions": "off"
    }
}